<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.assesment_s4681935.MainActivity"
    android:background="#FF9CCE">


    <ImageView
        android:id="@+id/bgCar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/carimg"
        app:srcCompat="@drawable/pngwing_com" />

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="wrap_content"
        android:layout_height="276dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/bgCar"
        android:layout_marginStart="130dp"
        >

        <Button
            android:id="@+id/addCarButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:backgroundTint="#FF69B4
"
            android:text="@string/addCarButton"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/checkCarButton"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FF69B4
"
            android:text="@string/checkCarButton"
            android:textColor="@color/black"
            tools:ignore="RelativeOverlap,TextSizeCheck" />
    </LinearLayout>

</RelativeLayout>
